<%- include('Layout/navBar') %>

<div class="container">
    <div class="row">
        <div class="col-lg-6 mx-auto mt-4">
            <div class="card shadow">
                <div class="card-header bg-success">
                    <h5 class="text-light">Edit Contact Details</h5>
                </div>
                <div class="card-body p-4">
                    <form action="/update/<%= userEntry._id %>" method="post" id="add-form" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label for="name">Name</label>
                            <input type="text" name="name" class="form-control form-control-lg" placeholder="Enter Name"  value = "<%= userEntry.Name%>" required/>
                        </div>
                        <div class="mb-3">
                            <label for="email">Email</label>
                            <input type="email" name="email" class="form-control form-control-lg" placeholder="Enter Email" value = "<%= userEntry.Email%>" required/>
                        </div>
                        <div class="mb-3">
                            <label for="phone">Phone</label>
                            <input type="tel" name="phone" class="form-control form-control-lg" placeholder="Enter Phone" value = "<%= userEntry.Phone%>"required/>
                        </div>
                        <div class="mb-3">
                            <label for="address">Address</label>
                            <input type="text" name="address" class="form-control form-control-lg" placeholder="Enter Address" value = "<%= userEntry.Address%>" required/>
                        </div>
                        <div class="mb-3">
                            <label for="image" class="form-label">Select Image</label>
                            <input type="file" name="image" class="form-control form-control-lg" />
                            <img src="/<%= userEntry.Image %>" width="100" class="image-thumbnail mt-1">
                        </div>
                        <input type="hidden" name="old_image" value="<%= userEntry.Image %>">
                        <div class="mb-3 d-flex justify-content-center">
                            <input type="submit" name="submit" value="Save Changes" class="btn btn-success btn-lg"/>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<%- include('Layout/pageImports') %>